<Page x:Class="WpfApp1.Zadanie.PageSqr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Zadanie"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSqr">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text=" Введите А:"/>
                    <TextBox Name="nameA" Width="50"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text=" Введите B:"/>
                    <TextBox Name="nameB" Width="50"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text=" Введите C:"/>
                    <TextBox Name="nameC" Width="50"/>
                </StackPanel>
                <Button Name="but1" Content="Посчитать"/>
            </StackPanel>
            <TextBox Name="Result" Text="Результат вычисления"/>
        </StackPanel>
        
    </Grid>
</Page>
